


:root 
  font-size 62.5%

body 
  margin 0
  background-color black
  font-family "IBM Plex Mono"
  // color rgb(0,256,0)
  color black

.home
  h1 
    font-style italic

  .container
    display flex
    flex-wrap wrap
    justify-content center
    background-color white
    height 100vh

  .imageContainer
    position relative
    margin-bottom 0

  img
    max-width 64rem
    height 10rem
    object-fit contain
    margin 0 1.2rem

  .colorCover
    position absolute
    top 0
    left 0
    background-color rgba(255,255,255,0.9)
    width 100%
    height 100%

  .selected
    opacity 0
